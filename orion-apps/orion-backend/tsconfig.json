{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ESNext"
        ],
        "types": [
            "bun",
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "drizzle.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}