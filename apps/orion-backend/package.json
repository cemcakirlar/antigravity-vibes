        "drizzle-orm": "^0.38.2",
        "hono": "^4.6.14",
        "jose": "^5.9.6",
        "postgres": "^3.4.5",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^24.10.1",
        "drizzle-kit": "^0.30.1"
    }
}